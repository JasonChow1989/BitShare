<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AnimFade" parent="@android:style/Animation.Activity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/anmi_allitem_getin</item>
        <item name="android:activityCloseExitAnimation">@anim/anmi_allitem_getout</item>
        <item name="android:activityOpenExitAnimation">@anim/anmi_main_getin</item>
        <item name="android:activityCloseEnterAnimation">@anim/anmi_main_getout</item>
    </style>

    <style name="Anim_style" parent="android:Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/AnimFade</item>
    </style>

    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Dialog_Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
     <style name="AnimBottom" parent="@android:style/Animation">  
    	<item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
	</style>
	
     <style name="CustomDialog" parent="@android:style/Theme.Dialog">  
    <item name="android:windowFrame">@null</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>  
    </style>  
    
</resources>