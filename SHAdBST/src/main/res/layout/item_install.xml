<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical" 
    android:background="@drawable/listview_item_bg_selector"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/item_install_title"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:layout_marginLeft="10dp"
            android:textColor="@color/comptxt"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/item_install_state"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:textColor="#ff6600"
            android:layout_marginRight="10dp"
            android:gravity="right|center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1" >
        
        <TextView
            android:id="@+id/item_install_code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:layout_marginLeft="15dp"
            android:textColor="@color/comptxt"
            android:gravity="left|center_vertical"
            />

        <TextView
            android:id="@+id/item_install_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:textColor="@color/comptxt"
            android:layout_marginRight="10dp" 
            android:gravity="right|center_vertical"
            />
    </LinearLayout>

</LinearLayout>