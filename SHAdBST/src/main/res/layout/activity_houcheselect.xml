<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_items_select"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        android:background="@color/title_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/titleback_houcheselect"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@drawable/img_title_bg_selector"
            android:button="@null"
            android:src="@drawable/img_title_left_selector" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="综合查询-候车亭查询"
            android:textColor="@color/txtcoloc" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="7" >

        <RadioGroup
            android:id="@+id/rp_houche"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dip"
            android:orientation="horizontal"
            android:background="@color/txtcoloc"
            android:paddingLeft="20dip"
            android:paddingRight="20dip" >

            <RadioButton
                android:id="@+id/rb_util_houchezone"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/utilselect_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="区域"
                android:textColor="@drawable/util_txt_selector" />

            <RadioButton
                android:id="@+id/rb_util_houcheline"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/utilselect_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="线路"
                android:textColor="@drawable/util_txt_selector" />

            <RadioButton
                android:id="@+id/rb_util_houchenum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/utilselect_bg_selector"
                android:button="@null"
                android:gravity="center"
                android:text="设备编号"
                android:textColor="@drawable/util_txt_selector" />
        </RadioGroup>
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/fm_util_houchezone"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        ></FrameLayout>

</LinearLayout>