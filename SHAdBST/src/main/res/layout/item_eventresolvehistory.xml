<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:orientation="vertical" 
    android:background="@color/txtcoloc"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.5"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:src="@drawable/deal" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="事务处理"
                android:textColor="#ff6600" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_event_histroy_date"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2" 
            android:gravity="right|center_vertical"
            android:textColor="@color/comptxt"
            android:textSize="15dip"
            android:paddingRight="5dp"
            android:text="7-16 11:11"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="vertical"
         >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2" 
            android:text="分发问题说明:"
            android:textColor="@color/comptxt"
            android:textSize="13dip"
            android:paddingLeft="15dp"
            />

        <TextView
            android:id="@+id/item_event_histroy_fenxi"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:textColor="@color/comptxt"
            android:textSize="15dip"
            android:paddingLeft="20dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.2" 
            android:text="具体事务:"
            android:textColor="@color/comptxt"
            android:textSize="13dip"
            android:paddingLeft="15dp"
            />

        <TextView
            android:id="@+id/item_event_histroy_taskdesc"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" 
            android:textColor="@color/comptxt"
            android:textSize="15dip"
            android:paddingLeft="20dp"
            />
    </LinearLayout>
</LinearLayout>