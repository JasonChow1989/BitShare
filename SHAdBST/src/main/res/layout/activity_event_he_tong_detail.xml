<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/txtcoloc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="@color/title_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/titleback_hetong_items"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@drawable/img_title_bg_selector"
            android:button="@null"
            android:src="@drawable/img_title_left_selector" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="合同管理"
            android:textColor="@color/txtcoloc" />

        <ImageView
            android:id="@+id/img_backtohome_hetong_items"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:src="@drawable/home01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.8"
        android:background="@drawable/metting_bg_shape"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同编号"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_hetongcode"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="对方单位"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_duifangdanwei"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同内容"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_hetongcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同类型"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_hetongtype"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同开始日期"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_startdate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同结束日期"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_enddate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="经办人"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_makepeople"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="合同金额"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_money"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="付款方式"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_sellsway"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="center"
                android:text="机密程度"
                android:textColor="#000000"
                android:textSize="14dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hetong_items_hetonglevel"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/metting_items_linecolor"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:textColor="@color/comptxt"
                android:textSize="14dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
       	android:id="@+id/id_hetong_passflag"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="12"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/id_hetong_agree"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="同意"
            android:textColor="@color/title_color"
            android:background="@drawable/bt_meettingagreement_selector" />

        <Button
            android:id="@+id/id_hetong_disagree"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="不同意"
            android:textColor="@color/title_color"
            android:background="@drawable/bt_meettingagreement_selector" />
    </LinearLayout>
</LinearLayout>