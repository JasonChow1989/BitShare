<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/uploadPictureLayout_msg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/txtcoloc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="@color/title_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/titleback_msgscreentaskprog"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@drawable/img_title_bg_selector"
            android:button="@null"
            android:src="@drawable/img_title_left_selector" />

        <TextView
            android:id="@+id/titlenametxt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="信息屏管理-任务处理"
            android:textColor="@color/txtcoloc" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.3" >

            <RadioGroup
                android:id="@+id/rg_msgscreen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_msgscreen_insint"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/feedlog_bg_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="安装"
                    android:textColor="@drawable/feedlog_txt_selector" />

                <RadioButton
                    android:id="@+id/rb_msgscreen_delete"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/feedlog_bg_selector"
                    android:button="@null"
                    android:gravity="center"
                    android:text="拆除"
                    android:textColor="@drawable/feedlog_txt_selector" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="3.6"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:background="@color/txtcoloc"
                    android:gravity="right|center_vertical"
                    android:text="资产编号:"
                    android:textColor="@color/comptxt" />

                <com.bashi_group_01.www.sliding.lib.ClearEditText
                    android:id="@+id/edt_msgscreen_num"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@color/cleartext_bg"
                    android:gravity="left|center_vertical"
                    android:hint="请输入资产编号"
                    android:paddingLeft="10dp"
                    android:textColor="@color/comptxt"
                    android:textSize="14dip" >
                </com.bashi_group_01.www.sliding.lib.ClearEditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_msgscreen_numll"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.5"
                android:background="#FEFDD4"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_msgscreen_capitalcode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:gravity="left|center_vertical"
                        android:textColor="#000000"
                        android:textSize="13dip" />

                    <TextView
                        android:id="@+id/tv_msgscreen_stitcode"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/comptxt"
                        android:textSize="13dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_msgscreen_district"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/comptxt"
                        android:textSize="13dip" />

                    <TextView
                        android:id="@+id/tv_msgscreen_stitname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/comptxt"
                        android:textSize="13dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_msgscreen_address"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/comptxt"
                        android:textSize="13dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/tv_msgscreen_stit_ting"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/comptxt"
                        android:textSize="13dip" />
                </LinearLayout>
            </LinearLayout>
            
            
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.6"
                >
                <com.bashi_group_01.www.sliding.lib.ClearEditText
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/tv_msg_screen_txt"
                    android:textColor="@color/comptxt"
                    android:hint="请输入文字描述"
                    android:gravity="left"
                    android:textSize="15dip"
                    android:background="@null"
                  	android:paddingLeft="10dp"
                  	android:paddingRight="10dp"
                    />
                
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5" >

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:fadingEdge="vertical"
                        android:scrollbars="vertical" >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="14dp" >

                            <com.photo.choosephotos.controller.GridViewWithoutScroll
                                android:id="@+id/allPic_msgscreen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:horizontalSpacing="5dp"
                                android:numColumns="4"
                                android:padding="10dp"
                                android:stretchMode="columnWidth"
                                android:verticalSpacing="5dp" >
                            </com.photo.choosephotos.controller.GridViewWithoutScroll>
                        </RelativeLayout>
                    </ScrollView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="5.2" >

            <Button
                android:id="@+id/bt_eventsend_msgscreen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="5dp"
                android:background="@drawable/bt_sureselector_bg_selector"
                android:text="发送"
                android:textColor="@color/txtcoloc" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>