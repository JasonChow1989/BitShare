                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llfozone"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_below="@id/llthridzone"
                    android:layout_weight="4"
