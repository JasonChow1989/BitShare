<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/txtcoloc"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:background="@color/title_color"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_titleback_eventchackitems_chuli"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:background="@drawable/img_title_bg_selector"
            android:button="@null"
            android:src="@drawable/img_title_left_selector" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="事务详情"
            android:textColor="@color/txtcoloc" />

        <ImageView
            android:id="@+id/img_backtohome_eventchackitems_chuli"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="8dp"
            android:layout_weight="4"
            android:src="@drawable/home01" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="22"
            android:background="@color/eventitems_bg"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="交办事务"
            android:textColor="@color/txtcoloc"
            android:textSize="15dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/txtcoloc"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.3"
                android:background="@color/rb_bg"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="15dp"
                    android:text="待处理"
                    android:textColor="#ff6600" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="事务发起人:"
                        android:textColor="#000000"
                        android:textSize="11dip" />

                    <TextView
                        android:id="@+id/evnetcheckitems_chuli_createname"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="董事长"
                        android:textColor="#000000"
                        android:textSize="11dip" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="right|center_vertical"
                        android:text="发起时间: "
                        android:textColor="#000000"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/evnetcheckitems_chuli_date"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="7月3日16:22"
                        android:textColor="#000000"
                        android:textSize="12dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1" >

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="5"
                        android:gravity="center_vertical"
                        android:paddingLeft="15dp"
                        android:text="位置:"
                        android:textColor="#000000"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/evnetcheckitems_chuli_location"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="上海市普陀区真南路150号"
                        android:textColor="#000000"
                        android:textSize="12dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/evnetcheckitems_chuli_taskdesc"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="4"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="描述事务的详细情况......"
                    android:textColor="@color/comptxt"
                    android:textSize="14dip" />

                <LinearLayout
                    android:id="@+id/ll_evnetcheckitems_chuli_pic1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3" >

                        <ImageView
                            android:id="@+id/evnetcheckitems_chuli_pic1"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1" 
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_evnetcheckitems_chuli_pic2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp"
                        android:visibility="visible"
                        android:layout_weight="3" >

                        <ImageView
                            android:id="@+id/evnetcheckitems_chuli_pic2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1" 
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_evnetcheckitems_chuli_pic3"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="5dp"
                        android:layout_weight="3" 
                        android:visibility="visible"
                        >

                        <ImageView
                            android:id="@+id/evnetcheckitems_chuli_pic3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="5dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1" 
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/id_recorder_length_chuli"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dip"
                    android:layout_marginLeft="10dip"
                    android:background="@drawable/dibg"
                    android:visibility="invisible" >

                    <View
                        android:id="@+id/id_recorder_anim_shenhe"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@drawable/adj" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.3"
                android:background="@color/rb_bg" >

                <Button
                    android:id="@+id/evnetcheckitems_chuli_button"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bt_weishouli_selector"
                    android:text="处理"
                    android:textColor="@color/txtcoloc" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>